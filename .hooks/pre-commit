#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo "üîç Running secret scanner..."

# Show what files are staged
echo -e "${YELLOW}Staged files:${NC}"
git diff --cached --name-only

# Check for AWS keys in staged files
found_secret=0
while IFS= read -r file; do
    if [ -n "$file" ]; then
        echo -e "${YELLOW}Checking file: $file${NC}"
        if [ -f "$file" ]; then
            echo "File exists, checking content..."
            if git show ":$file" | grep -E "AKIA[0-9A-Z]{16}"; then
                echo -e "${RED}‚ùå AWS Key found in $file${NC}"
                found_secret=1
            fi
        fi
    fi
done < <(git diff --cached --name-only)

if [ $found_secret -eq 1 ]; then
    exit 1
else
    echo -e "${GREEN}‚úÖ No AWS keys found in staged files${NC}"
    exit 0
fi 